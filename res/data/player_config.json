      "fall": {
        "frames": 2,
        "fps": 8,
        "loop": true
      },
      "land": {
        "frames": 3,
        "fps": 15,
        "loop": false
      }
    },

    "collision": {
      "hitbox_size": {
        "x": 32,
        "y": 48
      },
      "hitbox_offset": {
        "x": 0,
        "y": 0
