{
  "_schema_version": "1.0",
  "_godot_version": "4.5",
  "_system_id": "S15",
  "_created": "2025-11-18",
  "_description": "Vehicle system configuration - defines physics, abilities, and stats for all vehicles",

  "vehicles": {
    "mech_suit": {
      "_type": "combat_vehicle",
      "_description": "Heavy combat mech with high defense and AoE stomp ability",

      "physics": {
        "max_speed": 100.0,
        "acceleration": 300.0,
        "friction": 600.0,
        "turn_speed": 1.5
      },

      "combat": {
        "max_health": 200,
        "defense_bonus": 50.0,
        "can_attack": true
      },

      "abilities": {
        "stomp": {
          "name": "Stomp AoE",
          "damage": 50,
          "radius": 100.0,
          "knockback": 300.0,
          "cooldown": 3.0,
          "description": "Ground pound that damages all enemies in radius"
        }
      },

      "stomp_damage": 50,
      "stomp_radius": 100.0,
      "stomp_knockback": 300.0,
      "stomp_cooldown": 3.0
    },

    "car": {
      "_type": "racing_vehicle",
      "_description": "Fast racing car with drifting mechanics and nitro boost",

      "physics": {
        "max_speed": 400.0,
        "acceleration": 800.0,
        "friction": 1200.0,
        "turn_speed": 3.0
      },

      "drifting": {
        "drift_coefficient": 0.8,
        "drift_threshold": 0.3,
        "lateral_friction": 0.9,
        "drift_lateral_friction": 0.3
      },

      "abilities": {
        "nitro_boost": {
          "name": "Nitro Boost",
          "speed_multiplier": 1.5,
          "duration_s": 2.0,
          "stamina_cost": 30.0,
          "cooldown": 5.0,
          "description": "Temporary speed boost consuming stamina"
        }
      },

      "combat": {
        "can_attack": false
      },

      "drift_coefficient": 0.8,
      "drift_threshold": 0.3,
      "lateral_friction": 0.9,
      "nitro_speed_multiplier": 1.5,
      "nitro_duration_s": 2.0,
      "nitro_stamina_cost": 30.0,
      "nitro_cooldown": 5.0
    },

    "airship": {
      "_type": "aerial_vehicle",
      "_description": "Aerial vehicle with altitude control, ignores ground obstacles",

      "physics": {
        "max_speed": 250.0,
        "acceleration": 400.0,
        "friction": 800.0,
        "turn_speed": 2.0,
        "air_friction": 0.95
      },

      "altitude": {
        "min_altitude": 0.0,
        "max_altitude": 500.0,
        "default_altitude": 100.0,
        "altitude_change_speed": 100.0,
        "hover_stability": 0.8
      },

      "landing": {
        "requires_landing_pad": true,
        "min_landing_altitude": 10.0,
        "landing_zones": ["landing_pad", "flat_ground"]
      },

      "abilities": {
        "quick_ascend": {
          "name": "Quick Ascend",
          "altitude_gain": 100.0,
          "cooldown": 1.0,
          "description": "Rapidly gain altitude"
        }
      },

      "combat": {
        "can_attack": false
      },

      "min_altitude": 0.0,
      "max_altitude": 500.0,
      "default_altitude": 100.0,
      "altitude_change_speed": 100.0,
      "ability_cooldown": 1.0
    },

    "boat": {
      "_type": "water_vehicle",
      "_description": "Water-only vehicle with wave physics and fishing ability",

      "physics": {
        "max_speed": 200.0,
        "acceleration": 400.0,
        "friction": 900.0,
        "turn_speed": 2.5
      },

      "wave_physics": {
        "wave_amplitude": 10.0,
        "wave_frequency": 1.0,
        "max_tilt_angle": 15.0,
        "tilt_speed": 2.0
      },

      "water_detection": {
        "requires_water": true,
        "water_check_radius": 32.0,
        "can_move_on_land": false
      },

      "abilities": {
        "fishing": {
          "name": "Fishing",
          "duration": 3.0,
          "success_chance": 0.7,
          "cooldown": 5.0,
          "rewards": ["fish", "treasure", "junk"],
          "description": "Cast fishing line to catch items"
        }
      },

      "combat": {
        "can_attack": false
      },

      "wave_amplitude": 10.0,
      "wave_frequency": 1.0,
      "max_tilt_angle": 15.0,
      "tilt_speed": 2.0,
      "fishing_duration": 3.0,
      "fishing_success_chance": 0.7,
      "fishing_cooldown": 5.0
    }
  },

  "mount_system": {
    "mount_interaction_key": "interact",
    "dismount_key": "ui_cancel",
    "mount_range": 48.0,
    "dismount_offset": 64.0,
    "player_sprite_hide_on_mount": true,
    "vehicle_takes_player_position": false
  },

  "collision_layers": {
    "_description": "Suggested collision layer setup for vehicles",
    "ground_vehicles": {
      "layer": 3,
      "mask": [1, 2],
      "description": "Mech Suit and Car - collide with world and enemies"
    },
    "aerial_vehicles": {
      "layer": 4,
      "mask": [1],
      "description": "Airship - only collide with specific aerial obstacles"
    },
    "water_vehicles": {
      "layer": 5,
      "mask": [1, 6],
      "description": "Boat - collide with world and water boundaries"
    },
    "water_areas": {
      "layer": 6,
      "description": "Water areas for boat detection"
    }
  },

  "testing": {
    "test_scene_path": "res://tests/test_vehicles.tscn",
    "vehicle_spawn_positions": {
      "mech_suit": {"x": 100, "y": 100},
      "car": {"x": 300, "y": 100},
      "airship": {"x": 500, "y": 100},
      "boat": {"x": 700, "y": 100}
    }
  }
}
